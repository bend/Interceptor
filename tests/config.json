{
  "global" :  {
	"server-timeout" : 200, 
	"client-timeout" : 200,
	"nb-threads": 5,
	"max-cache-size" : 1000000,
	
	"error-pages" : [
		{ "404" : "error/404.html" }, 
		{ "400" : "error/400.html" }
	]


  },

  "servers": [
	{ 
	  "listen-host": "0.0.0.0",
	  "listen-port": 7000,
	  "server-timeout": 25,
	  "client-timeout": 25,

	  "sites": [
		{
		  "gzip": "css,html,js,png,mp4",
		  "try-files" : [
			"index.html"
		  ],
		  "host": "127.0.0.1",
		  "docroot": "site1/",

		  "error-pages" : [
			{ "404" : "404.html" },
			{ "400" : "400.html" }
		  ]

		}
	  ]
	},
	{ 
	  "listen-host": "0.0.0.0",
	  "listen-port": 7002,

	  "sites": [
		{
		  "gzip": "all",
		  "try-files" : [
			"index.php",
			"index.html"
		  ],
		  "host": "localhost",
		  "docroot": "site2/"
		}
	  ]
	}
  ]
}
