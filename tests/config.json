{
  "global" :  {
	"server-timeout" : 200, 
	"client-timeout" : 200,
	"nb-threads": 5,
	"max-cache-size" : 1000000,
	"max-in-mem-request-size" : 200000,
	"max-request-size": 2000000,
	
	"error-pages" : [
		{ "404" : "error/404.html" }, 
		{ "400" : "error/400.html" }
	]


  },

  "servers": [
	{ 
	  "listen-host": "127.0.0.1",
	  "listen-port": 7000,
	  "server-timeout": 25,
	  "client-timeout": 25,

	  "sites": [
		{
		  "gzip": "css,html,js,png,mp4",
		  "try-files" : [
			"index.html"
		  ],
		  "host": "127.0.0.1",
		  "docroot": "site1/",

		  "error-pages" : [
			{ "404" : "404.html" },
			{ "400" : "400.html" }
		  ],

		  "locations" : [
			{ 
			  "forbidden" : 403
			},
			{
			  "/testing" : {
				"type" : "cache",
				"expires": "1y"
			  }
			}
		  ]
		}
	  ]
	},
	{
	  "listen-host": "0.0.0.0",
	  "listen-port": 7002,

	  "sites": [
		{
		  "gzip": "all",
		  "try-files" : [
			"index.php",
			"index.html"
		  ],
		  "host": "localhost",
		  "docroot": "site2/",

		  "locations": [
			{
			  "index.html" : {
				"type": "connector", 
				"name": "php"
			  }
			}
		  ]
		}
	  ]
	},
	{ 
	  "listen-host": "0.0.0.0",
	  "listen-port": 7003,

	  "sites": [
		{
		  "gzip": "all",
		  "try-files" : [
			"index.php",
			"index.html"
		  ],
		  "host": "localhost",
		  "docroot": "site2/",
		  
		  "redirects" : [
			  {
				  "REGEX" : "URL/$1",
				  "TYPE" : "permanent | redirect"
			  }
		  ],



		  "backend" : "backend_test"
		}
	  ]
	},
	{ 
	  "listen-host": "0.0.0.0",
	  "listen-port": 7004,

	  "sites": [
		{
		  "gzip": "all",
		  "try-files" : [
			"index.php",
			"index.html"
		  ],
		  "host": "localhost",
		  "docroot": "site2/",
		  "backend" : "backend_test2"
		}
	  ]
	}
  ],

  "backends" : [
	{ "name" : "backend_test",
	  "host": "127.0.0.1",
	  "port" : 7000
	},
	{ "name" : "backend_test2",
	  "host": "127.0.0.1",
	  "port" : 7005
	}
  ],

  "connectors" : [
	{ "name": "php",
	  "type": "fcgi",
	  "host": "localhost",
	  "port" : 1234
	},
	{
	  "name": "nginx",
	  "type": "server",
	  "host": "localhost",
	  "port": 1234
	}
  ]
}
